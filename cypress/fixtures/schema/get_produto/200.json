{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "required": [
        "quantidade",
        "produtos"
    ],
    "properties": {
        "quantidade": {
            "type": "integer"
        },
        "produtos": {
            "type": "array",
            "additionalItems": true,
            "items": {
                "type": "object",
                "required": [
                    "nome",
                    "preco",
                    "descricao",
                    "quantidade",
                    "_id"
                ],
                "properties": {
                    "nome": {
                        "type": "string"
                    },
                    "preco": {
                        "type": "integer"
                    },
                    "descricao": {
                        "type": "string"
                    },
                    "quantidade": {
                        "type": "integer"
                    },
                    "_id": {
                        "type": "string"
                    }
                },
                "additionalProperties": true
            }
        }
    },
    "additionalProperties": true
}